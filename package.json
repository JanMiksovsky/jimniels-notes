{
  "private": true,
  "type": "module",
  "scripts": {
    "fetch-data": "curl https://blog.jim-nielsen.com/feed.reading-notes.json --output ./feed.json && node --env-file=.env scripts/dropbox-download-files.js",
    "clean": "rm -rf ./build && mkdir ./build",
    "pre": "npm run clean && npm run fetch-data && cp -a static/. build/",
    "start": "npm run pre && node --watch --no-warnings index.js",
    "build": "npm run pre && node index.js",
    "postbuild": "html-minifier --collapse-whitespace --remove-empty-attributes --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-attribute-quotes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true build/index.html -o build/index.html"
  },
  "dependencies": {
    "html": "github:jimniels/html",
    "html-minifier": "^4.0.0",
    "jsonfeed-to-rss": "^3.0.6"
  },
  "devDependencies": {
    "marked": "^4.2.12",
    "normalize.css": "^8.0.1",
    "psl": "^1.9.0"
  }
}
